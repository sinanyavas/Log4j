<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
<Properties>
    <Property name="basePath">/Users/sinanyavas/Documents/Log4jTutorial
    </Property>
</Properties>

<Appenders>
    // Rolling file concept is needed to locate logFile
    <RollingFile name="fileLogger" fileName="${basePath}/mylogger1.log" filePattern="${basePath}/ mylogger1-%d{yyyy-MM-dd}.log">
        <PatternLayout>
            <pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n
            </pattern>
        </PatternLayout>
        <Policies>`
            <TimeBasedTriggeringPolicy interval="1" modulate="true" />
        </Policies>
    </RollingFile>

    <Console name="console" target="SYSTEM_OUT">
        <PatternLayout   pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n" />
    </Console>
</Appenders>
    <Loggers>
        <Logger name="Root" level="trace" additivity="false">
            <appender-ref ref="fileLogger" level="debug"/>
        </Logger>
        <Root level="trace" additivity="false">
            <appender-ref ref="fileLogger" />
        </Root>
    </Loggers>
</Configuration>



